@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>title</h2>
<!-- Portfolio Grid Section -->
<section id="portfolio">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                <h2>Almond Butter</h2>
                <h4><small>Broken Food Company</small></h4>
                <hr>
            </div>
            <div class="col-lg-3 text-right">
                <button type="button" class="btn btn-default text-right">Visit vendor page</button>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-7 text-left">
                <div id="productCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#productCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#productCarousel" data-slide-to="1"></li>
                        <li data-target="#productCarousel" data-slide-to="2"></li>
                        <li data-target="#productCarousel" data-slide-to="3"></li>
                        <li data-target="#productCarousel" data-slide-to="4"></li>
                        <li data-target="#productCarousel" data-slide-to="5"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner carousel-inner2" role="listbox">
                        <div class="item active">
                            <img src="~/images/productListing/1_Chocolate_onwhite.jpg" alt="Chocolate Almond Butter" class="productImage">
                        </div>

                        <div class="item">
                            <img src="~/images/productListing/2_Chocolate.jpg" alt="Chocolate" class="productImage">
                        </div>

                        <div class="item">
                            <img src="~/images/productListing/2_Original.jpg" alt="Original" class="productImage">
                        </div>

                        <div class="item">
                            <img src="~/images/productListing/2_Vanilla.jpg" alt="Vanilla" class="productImage">
                        </div>

                        <div class="item">
                            <img src="~/images/productListing/Recipe_1.jpg" alt="Example Image 1" class="productImage">
                        </div>

                        <div class="item">
                            <img src="~/images/productListing/Recipe_2.jpg" alt="Example Image 2" class="productImage">
                        </div>
                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#productCarousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#productCarousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-lg-5 text-left">
                <div class="productListing-productInformation">
                    <h3>Almond Butter</h3>
                    <h3><small>300 almonds in each jar!</small></h3>
                    <p>
                        <span class="Price"><strong>Price: </strong>$12.00 per jar</span>
                        <form role="form">
                            <div class="form-group">
                                <label for="Quantity">Quantity:</label>
                                <input type="number" class="form-control" name="Quantity" value="1">
                            </div>
                            <div class="form-group">
                                <label for="Flavour">Flavour:</label>
                                <select class="form-control" name="Flavour">
                                    <option value="Chocolate">Chocolate</option>
                                    <option value="Original">Original</option>
                                    <option value="Vanilla">Vanilla</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="Size">Size:</label>
                                <select class="form-control" name="Size">
                                    <option value="250g">250 grams</option>
                                    <option value="500g">500 grams</option>
                                </select>
                            </div>
                        </form>
                    <p>
                        <span class="Key points"><strong>Key points:</strong></span>
                        <ul>
                            <li>Rated: ★★★★☆ (21 reviews)</li>
                            <li>Ships in Wellington, New Zealand</li>
                        </ul>
                    <p>
                        <button type="button" class="btn btn-lg btn-block btn-success"><span class="glyphicon glyphicon-shopping-cart"></span> Add to cart</button>
                        </span><br />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-7 text-left">
                <!-- Product Description Items-->
                <h4 class="productDescriptionItems">Product Description</h4>
                <span>
                    Original doesn’t always mean basic. How could it when this jar packs all the power of 300 almonds, ready to spread on your next piece of toast? Benefits like reduced heart disease and lower blood pressure means this jars no minor, it’s a staple.
                </span>

                <h4 class="productDescriptionItems">Payment & Shipping</h4>
                <span>
                    <ul>
                        <li>We accept the following cash payments</li>
                        <ul>
                            <li>Bank deposit</li>
                            <li>Cash</li>
                            <li>Credit cards</li>
                            <li>PayPal</li>
                        </ul>
                        <li>Ships in Wellington, New Zealand.</li>
                        <ul>
                </span>
            </div>
            <div class="col-lg-5 text-left">
                <!-- Reviews -->
                <h4 class="productDescriptionItems">Reviews</h4>

                <div class="row">
                    <!-- Reviewer 1 -->
                    <div class="col-xs-3 col-lg-3 text-center">
                        <!-- Review Pictures & People -->
                        <img src="~/images/productListing/reviewer1.jpg" class="img-circle review-profile">
                        <span><strong>Chris</strong></span><br>
                    </div>
                    <div class="col-xs-9 col-lg-9 text-left">
                        <!-- Reviews -->
                        <span class="review-stars">★★★★★<br></span>
                        <span>Amazing almond butter! I think I ate all of it within an hour. True story.</span>
                    </div>
                </div>

                <div class="row review-row">
                    <!-- Reviewer 2 -->
                    <div class="col-xs-3 col-lg-3 text-center">
                        <!-- Review Pictures & People -->
                        <img src="~/images/productListing/reviewer2.jpg" class="img-circle review-profile">
                        <span><strong>Mary</strong></span><br>
                    </div>
                    <div class="col-xs-9 col-lg-9 text-left">
                        <!-- Reviews -->
                        <span class="review-stars">★★★★☆<br></span>
                        <span>It almost has too many almonds! Very nice!</span>
                    </div>
                </div>

                <div class="row review-row">
                    <!-- Reviewer 3 -->
                    <div class="col-xs-3 col-lg-3 text-center">
                        <!-- Review Pictures & People -->
                        <img src="~/images/productListing/reviewer3.jpg" class="img-circle review-profile">
                        <span><strong>John</strong></span><br>
                    </div>
                    <div class="col-xs-9 col-lg-9 text-left">
                        <!-- Reviews -->
                        <span class="review-stars">★★★★☆<br></span>
                        <span>Dude, this is some really sweet almond butter. My girlfriend loves it.</span>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

